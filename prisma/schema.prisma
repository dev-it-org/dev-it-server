generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String   @unique
  username   String
  hash       String
  hashedRt   String?
  role       Role     @default(User)

  @@map("users")
}

model Post {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Role {
  Admin
  Moderator
  User
}
